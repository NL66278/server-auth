<odoo>

    <record id="view_groups_form" model="ir.ui.view">
        <field name="inherit_id" ref="auth_dynamic_groups.view_groups_form" />
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <xpath
                expr="//group[@id='group_criteria']"
                position="inside"
                >
                <field name="dynamic_method_contract" />
            </xpath>
            <xpath
                expr="//notebook/page[@id='page_dynamic']"
                position="inside"
                >
                <group
                    id="group_contract"
                    string="Contract"
                    attrs="{'invisible': [('dynamic_method_contract', '=', False)]}"
                    col="4"
                    colspan="6"
                    >
                    <label
                        for="product_ids"
                        string="Select products that users should have a contract for."
                        colspan="4"
                        />
                    <field
                        name="product_ids"
                        colspan="4"
                        nolabel="1"
                        />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
