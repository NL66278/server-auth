<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_company_form" model="ir.ui.view">
        <field name="name">Configure management of users for partners</field>
        <field name="model">partner.user.management</field>
        <field name="arch" type="xml">
            <form string="CConfigure user managementonfigure user management">
                <group colspan="6" col="4">
                    <field name="name" />
                    <field name="category_id" />
                    <field
                        name="template_user_id"
                        context="{'active_test': False}"
                        />
                    <field name="allow_create_user" />
                    <field name="allow_password_reset_mail" />
                    <field name="auto_create_user" />
                </group>
                <group colspan="6" col="2">
                    <label for="partner_manager_ids" colspan="2" />
                    <field
                        name="partner_manager_ids"
                        nolabel="1"
                        colspan="2"
                        />
                </group>
            </form>
        </field>
    </record>

    <record id="view_company_tree" model="ir.ui.view">
        <field name="name">List management of users for partners</field>
        <field name="model">partner.user.management</field>
        <field name="arch" type="xml">
            <tree string="Configure user management">
                <field name="name" />
                <field name="category_id" />
                <field
                    name="template_user_id"
                    context="{'active_test': False}"
                    />
                <field name="allow_create_user" />
                <field name="auto_create_user" />
                <field name="allow_password_reset_mail" />
            </tree>
        </field>
    </record>

    <record id="view_company_search" model="ir.ui.view">
        <field name="name">Search management of users for partners</field>
        <field name="model">partner.user.management</field>
        <field name="arch" type="xml">
            <search string="Configure user management">
                <field name="name" />
                <field name="category_id" />
            </search>
        </field>
    </record>

</odoo>
