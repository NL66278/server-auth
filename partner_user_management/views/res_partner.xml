<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_partner_form" model="ir.ui.view">
        <field name="name">Add action user create to the partner form</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <field name="can_create_user" invisible="1" />
                <field name="user_id" invisible="1" />
                <!-- Show button to create user, or to show user, or nothing.
                -->
                <button
                    name="action_create_user"
                    string="Create user"
                    type="object"
                    icon="fa-user-plus"
                    attrs="{'invisible': [('can_create_user', '!=', True)]}"
                    />
                <button
                    class="oe_inline oe_stat_button"
                    type="object"
                    string="Show user"
                    name="action_show_user"
                    icon="fa-user"
                    attrs="{'invisible': [('user_ids', '=', [])]}"
                    >
                </button>
            </xpath>
        </field>
    </record>

</odoo>
