<odoo>

    <record id="view_groups_form" model="ir.ui.view">
        <field name="inherit_id" ref="auth_dynamic_groups.view_groups_form" />
        <field name="model">res.groups</field>
        <field name="arch" type="xml">
            <xpath
                expr="//notebook/page[@id='page_dynamic']"
                position="inside"
                >
                <group
                    id="group_relation"
                    attrs="{'invisible': [('group_type', '!=', 'relation')]}"
                    col="4"
                    >
                    <field name="allow_companies" />
                    <label
                        for="relation_type_ids"
                        string="Select relation types that users should have a relation for"
                        colspan="4"
                        />
                    <field
                        name="relation_type_ids"
                        colspan="4"
                        nolabel="1"
                        />
                </group>
            </xpath>
        </field>
    </record>

</odoo>
